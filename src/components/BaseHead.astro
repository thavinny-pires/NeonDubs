---
import "@styles/global.css";
import type { ImageMetadata } from "astro";
import FallbackImage from "@pvt-assets/og_image.jpeg";
import { SITE_TITLE } from "@constants";
import WebSite from "@components/WebSite.astro";
import Organization from "@components/Organization.astro";

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
}

const { title, description, image = FallbackImage } = Astro.props;
---

<!-- Core metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<!-- UI -->
<meta name="theme-color" content="#8B51FE" />
<meta name="apple-mobile-web-app-capable" content="yes" />

<!-- SEO and indexing -->
<link rel="canonical" href={Astro.url} />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta
  name="google-site-verification"
  content="dhuhKeqkb88-hgrQNXKyraSoZfAIfmqVlzQJABfoZDk"
/>

<!-- Structured data -->
<WebSite />
<Organization />

<!-- Primary meta tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Feeds -->
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", Astro.site)}
/>

<!-- Performance -->
<link
  rel="preload"
  href="/fonts/atkinson-regular.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/atkinson-bold.woff"
  as="font"
  type="font/woff"
  crossorigin
/>
<link
  rel="preload"
  href="/fonts/xirod.otf"
  as="font"
  type="font/opentype"
  crossorigin
/>

<!-- Open Graph -->
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:type" content="website" />
<meta property="og:locale" content="pt_BR" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />
<meta property="og:image:width" content="701" />
<meta property="og:image:height" content="438" />
<meta property="og:image:type" content="image/jpeg" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={Astro.url} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image.src, Astro.url)} />
