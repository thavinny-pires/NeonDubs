---
import { Icon } from "astro-icon/components";
const today = new Date();
---

<footer>
  <p>&copy; {today.getFullYear()} Thavinny "Neo" Pires - All rights reserved.</p>
  
  <div class="social-links">
    <a href="https://discord.com/users/1053804901211328633" target="_blank" aria-label="See My Discord Profile">
      <Icon name="fa6-brands:discord" width="32" height="32" />
    </a>
    <a href="https://x.com/thavinny_pires" target="_blank" aria-label="Follow on Twitter">
      <Icon name="fa6-brands:x-twitter" width="32" height="32" />
    </a>
    <a href="https://github.com/seuusuario" target="_blank" aria-label="View GitHub profile">
      <Icon name="fa6-brands:github" width="32" height="32" />
    </a>
  </div>
</footer>

<style>
  footer {
    padding: 2em 1em 6em 1em;
    background: linear-gradient(var(--gray-gradient)) no-repeat;
    color: white;
    text-align: center;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1em;
    margin-top: 1em;
  }

  .social-links a {
    text-decoration: none;
    color: white;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .social-links a:hover {
    transform: scale(1.1);
    opacity: 0.8;
  }
</style>